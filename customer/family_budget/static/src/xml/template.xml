<?xml version="1.0" encoding="UTF-8" ?>
<templates id="template" xml:space="preserve">
    <t t-name="familyDashboard">
        <div class="accounts-dashboard-wrap">
            <div class="o_dashboards col-xs-12 col-sm-12 col-lg-12 col-md-12"
                 style="background-color: #e1e1e1;overflow: scroll; !important; ">
                <div class="content-header">
                    <div class="container-fluid">
                        <div class="row mb-2">
                            <div class="col-sm-12">
                                <div class="dash-header">
                                    <h1 class="">Dashboard </h1>
                                    <div class="muted small">statistics and rapports </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row" style="margin:0px">
                <div class="col-xs-12 col-sm-12 col-xs-12 col-lg-12 col-md-12">
                    <div>
                        <div class="row  account-details mt-3" style="margin:0px">

                            <div class="col-md-4  col-sm-12  col-xs-12 d-flex align-items-stretch">
                                <div class="tile wide invoice box-2">
                                    <div class="header">
                                        <div class="main-title ">Current Budget</div>
                                        <h2 class="text-center my-4" id="current_budget">
                                            <span id="current_budget_value">10</span>
                                        </h2>
                                        <canvas id="current_budget_chart" width="300"
                                                height="200"> </canvas>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 col-sm-12 col-xs-12 d-flex align-items-stretch">
                                <div class="tile wide invoice box-2">
                                    <div class="header">
                                        <div class="main-title ">Total Members</div>
                                        <h2 class="text-center my-4" id="members_statics">
                                            <span id="members_statics_value">0</span>
                                        </h2>
                                        <canvas id="members_statics_chart" width="300"
                                                height="200"> </canvas>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-4 col-sm-12 col-xs-12 d-flex align-items-stretch">
                                <div class="tile wide invoice box-2">
                                    <div class="header">
                                        <div class="main-title ">Top 5 Contributors</div>
                                        <table class="table">
                                             <thead>
                                                <tr>
                                                    <th scope="col">Name</th>
                                                    <th scope="col">Amount</th>
                                                </tr>
                                             </thead>
                                            <tbody id="top_5_members_row">

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>


                            <!--Top Services-->
                            <div class="col-md-6 col-sm-12 col-xs-12 d-flex align-items-stretch">
                                <div class="tile wide invoice box-2">
                                    <div class="p-5 pt-0">
                                        <h2 class=" mb-3">
                                            <span class="text-primary">Members in Debt</span>
                                        </h2>
                                        <table class="table">
                                             <thead>
                                                <tr>
                                                    <th scope="col">Name</th>
                                                    <th scope="col">Amount</th>
                                                </tr>
                                             </thead>
                                            <tbody id="debt_members">

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-6 col-sm-12 col-xs-12 d-flex align-items-stretch">
                                <div class="tile wide invoice box-2">

                                        <canvas id="contributionsWithdraws" width="300"
                                                height="200"> </canvas>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </t>
</templates>